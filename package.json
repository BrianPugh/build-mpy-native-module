{
  "name": "build-mpy-native-module",
  "version": "1.0.0",
  "description": "GitHub Action to build MicroPython native modules for all supported architectures",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist && ncc build src/post.ts -o dist/post",
    "build:index": "ncc build src/index.ts -o dist",
    "build:post": "ncc build src/post.ts -o dist/post",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "all": "npm run typecheck && npm run lint && npm run build && npm test",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrianPugh/build-mpy-native-module.git"
  },
  "bugs": {
    "url": "https://github.com/BrianPugh/build-mpy-native-module/issues"
  },
  "homepage": "https://github.com/BrianPugh/build-mpy-native-module",
  "keywords": [
    "micropython",
    "native-module",
    "mpy",
    "cross-compile",
    "github-action"
  ],
  "author": "Brian Pugh <bnp117@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/cache": "^4.0.0",
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.4.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.49.0"
  }
}
